
#include <iostream>
#include <iomanip>

using namespace std;

void main () {

    int length;
    cout << "Length: ";
    cin >> length;
    char symbol;
    cout << "Symbol: ";
    cin >> symbol;

    for (int i = 1; i <= length; i++) {
        for(int j=1; j<= i; j++) {
            cout << setw(2) << symbol;
        }

        cout << endl;
    }


}

REVERSED TRIANGLE


#include <iostream>
#include <iomanip>

using namespace std;

void main () {

    int length;
    cout << "Length: ";
    cin >> length;
    char symbol;
    cout << "Symbol: ";
    cin >> symbol;

    for (int i = length; i >=1; i--) {
        for(int j=1; j<= i; j++) {
            cout << setw(2) << symbol;
        }

        cout << endl;
    }


}
